#! /usr/bin/env hhvm
<?hh

$basedir = dirname(__DIR__);
$testDir = $basedir . '/Test';
system(__DIR__ . '/findfactories ' . $testDir);

system($basedir . '/vendor/bin/hackunit ' . $testDir);

echo PHP_EOL . 'Removing factory container' . PHP_EOL . PHP_EOL;
unlink($basedir . '/FactoryContainer.php');
